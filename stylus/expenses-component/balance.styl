@import 'colors.styl'

.current-balance-box
  display flex
  background-color soft-red
  justify-content space-between
  color: pale-orange
  max-width 400px
  width: 90vw
  border-radius: 10px
  padding-right: 1em

  img
    max-width 100%


.current-balance
  display flex
  flex-direction column
  padding: 1.5em 0 0.25em 1.5em

  h1
    font-size 30px
    margin-top: 0.25em

  span
    font-size 18px