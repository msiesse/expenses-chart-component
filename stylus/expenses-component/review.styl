@import 'colors.styl'

.week-review
  background-color white
  flex-direction column
  align-items start
  h1
    font-size 24px
    margin-top 0

.diagram
  width 100%
  display grid
  grid-template-columns: repeat(15, 1fr);
  align-items end

.weekdays
  font-size 12px
  color medium-brown
  text-align center
  max-width: 30px

.stick
  display flex
  flex-direction column
  align-items center
  grid-row-start: 1

for day in (mon 1) (tue 3) (wed 5) (thu 7) (fri 9) (sat 11) (sun 13)
  .stick.{day[0]}
    grid-column-start: day[1]
    grid-column-end: day[1] + 3

.stick-icon
  background-color soft-red
  border-radius 5px
  width 38px
  min-width 32px
  margin-top 0.5em
  z-index 1

@media screen and (max-width: 425px)
  .stick-icon
    width: 32px

.stick-icon:hover
  background-color light-soft-red

.stick-icon:focus
  background-color cyan

.info-stick
  background-color white
  color: white
  text-align center
  font-size: 12px
  padding: 0.55em
  border-radius 5px
  z-index: 0

@media screen and (max-width: 425px)
  .info-stick
    font-size: 11px
    padding: 0.4em
    border-radius 10px
