@import 'colors.styl'

.week-review
  background-color white
  flex-direction column
  align-items start
  h1
    font-size 24px
    margin-top 0

.diagram
  width: 100%
  display grid
  grid-auto-flow: column;
  grid-auto-columns: 1fr;
  align-items: end;
  gap: 10px

.weekdays
  font-size: 12px
  text-align: center
  color: medium-brown

.stick
  height: 7em
  background-color: soft-red
  border-radius: 5px